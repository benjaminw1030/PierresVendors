@using PierresVendors.Models;
@{
  Layout = "_Layout";
}

<div class="jumbotron">
  <h2>Pierre's Vendors</h2>
</div>

<div class="content">
  @if (Model.Count == 0)
  {
    <p>No vendors have been added yet.</p>
  }
  
  @foreach (Vendor vendor in Model)
  {
    <h4><a href="/vendors/@vendor.Id">@vendor.Name</a></h4>
  }
  <ul>
    <li><a href="/">Home.</a></li>
    <li><a href="/vendors/new">Add a new vendor.</a></li>
    <li><a href="/vendors/search_by_vendor">Search by vendor.</a></li>
  </ul>
</div>