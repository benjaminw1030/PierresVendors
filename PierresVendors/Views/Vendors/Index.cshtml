@using PierresVendors.Models;
@{
  Layout = "_Layout";
}

<div class="jumbotron">
  <h2>Pierre's Vendors</h2>
</div>

@if (Model.Count == 0)
{
  <p>No vendors have been added yet.</p>
}

@foreach (Vendor vendor in Model)
{
  <h4><a href="/vendors/@vendor.Id">@vendor.Name</a></h4>
}

<p><a href="/">Home.</a></p>
