@using PierresVendors.Models;

@{
  Layout = "_Layout";
}

<div class="jumbotron">
  <h2>Search Results</h2>
</div>

<div class="content">
  @if (Model.Count == 0)
  {
    <h3>No vendors found.</h3>
  }
  
  @foreach (Vendor vendor in Model)
  {
    <h3><a href="/vendors/@vendor.Id">@vendor.Name</a></h3>
  }
  
  <li><a href="/">Home.</a></li>
  <li><a href="/vendors">Vendor list.</a></li>
  <li><a href="/vendors/new">Add a new vendor.</a></li>
  <li><a href="/vendors/search_by_vendor">Search again.</a></li>
</div>